	issn = {1941-0506},
	journal = {IEEE Transactions on Visualization &amp; Computer Graphics},
	keywords = {image reconstruction;head;cameras;image edge detection;rendering (computer graphics);prototypes;magnetic heads},
	month = {may},
	number = {05},
	pages = {2826-2836},
