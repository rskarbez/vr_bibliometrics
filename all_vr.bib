	booktitle = {2019 IEEE Conference on Virtual Reality and 3D User Interfaces (VR)},
	date-added = {2024-03-18 02:30:14 -0400},
	date-modified = {2024-03-18 02:30:14 -0400},
	doi = {10.1109/VR.2019.8797911},
