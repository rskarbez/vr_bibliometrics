	number = {05},
	pages = {2596-2606},
	publisher = {IEEE Computer Society},
	title = {A Systematic Review on the Visualization of Avatars and Agents in AR &amp; VR displayed using Head-Mounted Displays},
	volume = {29},
	year = {2023},
